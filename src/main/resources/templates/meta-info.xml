<?xml version="1.0" encoding="UTF-8"?>
<meta-data>
    <globals>
        <validation>
            <column name="create_user"/>
            <column name="create_date"/>
            <column name="update_user"/>
            <column name="update_date"/>
            <column name="is_deleted"/>
        </validation>
        <defaults>
            <column name="create_user">
                <create>"SYSTEM"</create>
            </column>
            <column name="create_date">
                <create>new java.sql.Timestamp(System.currentTimeMillis())</create>
            </column>
            <column name="update_user">
                <update>"SYSTEM"</update>
            </column>
            <column name="update_date">
                <update>new java.sql.Timestamp(System.currentTimeMillis())</update>
            </column>
            <column name="is_deleted">
                <create>false</create>
            </column>

        </defaults>
    </globals>
    <table name="country">
        <controller>
            <mapping>countries</mapping>
        </controller>
    </table>
    <table name="airport">
        <controller>
            <mapping>airports</mapping>
        </controller>
        <validation>
            <column name="port_id">
                @NotNull
                @Size(min = 3, max = 3)
            </column>
        </validation>
        <sort>
            <column name="port_id" default="true"/>
            <column name="town_id"/>
            <column name="country_id"/>
        </sort>
        <filter>
            <column name="name" suffix="ContainsIgnoreCase"/>
            <column name="port_id"/>
            <column name="town_id"/>
            <column name="country_id" multiple="true"/>
        </filter>
    </table>
